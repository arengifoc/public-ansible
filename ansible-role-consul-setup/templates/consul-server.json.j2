{
  "server": true,
  "datacenter": "{{ consul_dc }}",
  "node_name": "{{ inventory_hostname }}",
  "data_dir": "{{ consul_data_dir }}",
  "bind_addr": "0.0.0.0",
  "client_addr": "0.0.0.0",
  "bind_addr": "{{ ansible_host }}",
  "bootstrap_expect": 3,
  "retry_join": ["{{ groups[consul_join_group] | map('extract', hostvars, ['ansible_host']) | list | join('\",\"') }}"],
  "ui": {{ 'true' if consul_ui_enabled == True else 'false' }},
  "log_level": "{{ consul_syslog_facility }}",
  "enable_syslog": {{ 'true' if consul_syslog_enabled == True else 'false' }}
}
